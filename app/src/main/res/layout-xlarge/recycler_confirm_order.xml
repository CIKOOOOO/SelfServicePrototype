<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/recycler_quantity_confirm_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:background="@drawable/rectangle_rounded_white"
        android:paddingStart="20dp"
        android:paddingTop="16dp"
        android:paddingEnd="20dp"
        android:paddingBottom="16dp"
        android:textColor="@color/black_color"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/recycler_product_name_confirm_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/recycler_price_confirm_order"
        android:layout_toEndOf="@id/recycler_quantity_confirm_order"
        android:maxLines="2"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/recycler_price_confirm_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:textSize="40sp" />
</RelativeLayout>